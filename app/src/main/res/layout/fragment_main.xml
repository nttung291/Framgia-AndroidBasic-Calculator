<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="@color/colorBlack"
    tools:context="com.framgia.framgia_android.MainFragment">
    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="end"
            android:textSize="50sp"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/tv_bfresult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="end"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_clean"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="AC"
                android:textColor="#ff5900"
                android:textSize="20sp"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/bt_c"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="+/-"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/bt_math"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="âˆš"
                android:textSize="20sp"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_math"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="20sp"
                android:backgroundTint="@color/colorOrange"
                android:onClick="onClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="7"
                android:textSize="20sp"/>

            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="20sp"
                android:onClick="onClick"/>
            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="20sp"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_math"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="-"
                android:gravity="center"
                android:textSize="20sp"
                android:onClick="onClick"
                android:backgroundTint="@color/colorOrange"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="20sp"
                android:onClick="onClick"/>
            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="20sp"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="20sp"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_math"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="x"
                android:textSize="20sp"
                android:backgroundTint="@color/colorOrange"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="20sp"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="20sp"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20sp"
                android:onClick="onClick"/>

            <Button
                android:id="@id/bt_math"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=":"
                android:textSize="20sp"
                android:onClick="onClick"
                android:backgroundTint="@color/colorOrange"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@id/bt_num"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="0"
                android:textSize="20sp"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/bt_dot"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="20sp"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/bt_bh"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="20sp"
                android:onClick="onClick"
                android:backgroundTint="@color/colorOrange"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
